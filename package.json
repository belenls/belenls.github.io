{
  "name": "belensantamarina",
  "version": "3.0.0",
  "description": "Belen Santamarina",
  "main": "script.js",
  "scripts": {
    "start": "npm run build:html && npm run build:static && npm run build:js -- -w & npm run build:css -- -w & serve build",
    "build": "npm run build:js && npm run build:css && npm run build:html && npm run build:static",
    "build:js": "babel *.js --out-dir build --out-file-extension .min.js",
    "build:css": "postcss --no-map --use autoprefixer postcss-nested --parser postcss-scss style.scss -o build/style.min.css",
    "build:html": "bin/render",
    "build:static": "cp -rf static/* build",
    "publish": "npm install && npm run build",
    "lint": "prettier --write . '!{build/**,content/**}'",
    "optimise": "bin/optimise all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belenls/belenls.github.io.git"
  },
  "author": "Andres Moritan <amoritan@me.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/belenls/belenls.github.io/issues"
  },
  "homepage": "https://belensantamarina.com",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "args": "^5.0.1",
    "autoprefixer": "^10.4.5",
    "babel-preset-minify": "^0.5.1",
    "mustache": "^4.2.0",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.6.2",
    "serve": "^13.0.2",
    "shelljs": "^0.8.5",
    "showdown": "^2.1.0",
    "sitemap": "^7.1.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "babel-preset-minify"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
